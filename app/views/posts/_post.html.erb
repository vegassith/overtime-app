<tr>
    <td> <%= post.daily_hours %> </td>
    <td> <%= post.date %> </td>
    <td class="d-none d-sm-block"> <%= link_to truncate(post.worked_performed), post %> </td>
    <td> <%= status_label(post.status) %></td>
    <td><%= link_to '', edit_post_path(post), id: "edit_#{post.id}", class:"fa fa-pencil index-icons" if policy(post).update? %></td>
    <td><%= link_to '', post_path(post), method: :delete, id: "delete_post_#{post.id}_from_index", data: { confirm: 'Are you sure?' }, class:"fa fa-trash index-icons" %></td>
</tr>